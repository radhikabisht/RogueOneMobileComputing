<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rogueone.rogueonemobliecomputing">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".FetchAddressIntentService"
            android:exported="false"/>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark"></activity>
        >
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.Dark"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiaryActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".TripActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".CreateTripActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ConnectActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".PendingActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".FriendsActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".LocationEntryActivity"
            android:theme="@style/AppTheme.Dark"></activity>

    </application>

</manifest>